<!-- Main sidebar -->
<div class="sidebar sidebar-main sidebar-fixed">
<div class="sidebar-content">

	<!-- User menu -->
	<div class="sidebar-user">
		<div class="category-content">
			<div class="media">
				<a href="#" class="media-left"><img src="/assets/placeholder.jpg" class="img-circle img-sm" alt=""></a>
				<div class="media-body">
					<% if user_signed_in? %>
						<span class="media-heading text-semibold"><%= current_user.nickname %></span>
						<div class="text-size-mini text-muted">
							管理員
						</div>
					<% else %>
						<span class="media-heading text-semibold">
							訪客
						</span>
						<div class="text-size-mini text-muted">
							<%= link_to '加入社群', user_omniauth_authorize_path(:facebook) %>
						</div>
					<% end %>
				</div>

				<% if user_signed_in? %>
					<div class="media-right media-middle">
						<ul class="icons-list">
							<li>
									<i class="icon-wrench3"></i>
							</li>
						</ul>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<!-- /user menu -->

	<!-- Main navigation -->
	<div class="sidebar-category sidebar-category-visible">
		<div class="category-content no-padding">
			<ul class="navigation navigation-main navigation-accordion">
				<!-- Main -->
				<li class="navigation-header"><span>主題交流</span> <i class="icon-menu" title="Main pages"></i></li>
				<li>
					<%= link_to topics_path do %>
						<i class="icon-home4"></i> <span>GrowthHack</span>
					<% end %>
				</li>
				<li class="navigation-header"><span>活動專欄</span> <i class="icon-menu" title="Main pages"></i></li>
				<li><%= link_to workshops_path do %><i class="icon-spinner3 spinner"></i> <span>實務工作坊</span><% end %></li>
				<li>
					<%= link_to posts_path do %>
						<i class="icon-home4"></i> <span>例會紀錄</span>
					<% end %>
				</li>
				<li class="navigation-header"><span>工具體驗</span> <i class="icon-menu" title="Main pages"></i></li>
				<% if user_signed_in? %>
					<% if current_user.admin? %>
						<li>
							<%= link_to admin_root_path do %>
								<i class="icon-spinner3 spinner"></i> <span>管理者後台</span>
							<% end %>
						</li>
					<% else %>
						<li>
							<a href="#"><i class="icon-spinner3 spinner"></i> <span>初始參數</span></a>
							<ul class="hidden-ul" style="display: none;">								
								<li><a href="#">基本設定</a></li>
								<!-- 預設首頁/fb 像素/mixpanel/title/meta/og... -->
								<li><a href="#">第三方服務</a></li>
								<!-- fbmsg/line/plug-in物流設定/ATM資訊 -->
								<li><a href="#">On Boarding</a></li>
								<!-- 自動化排程 -->
							</ul>
						</li>
						<li>
							<a href="#"><i class="icon-spinner3 spinner"></i> <span>GH工具</span></a>
							<ul class="hidden-ul" style="display: none;">
								<li><a href="#">著陸頁</a></li>
								<li><a href="#">聯盟行銷</a></li>
							</ul>
						</li>
						<li>
							<a href="#"><i class="icon-spinner3 spinner"></i> <span>營銷分析</span></a>
							<ul class="hidden-ul" style="display: none;">
								<li><%= link_to '營銷分析', info_path, remote: true %></li>
								<li><%= link_to '用戶分析', info_path, remote: true %></li>
							</ul>
						</li>
						<li><%= link_to '新增回饋', new_feedback_path %></li>
					<% end %>
				<% else %>
				<li>
					<%= link_to user_omniauth_authorize_path(:facebook) do %>
						<i class="icon-spinner3 spinner"></i> <span>立即體驗</span>
					<% end %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
	<!-- /main navigation -->

</div>
</div>
<!-- /main sidebar